<Window x:Class="FacturationMercuriale.Views.ActivationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Activation du Logiciel" Height="300" Width="450"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Background="#F4F6F7" FontFamily="Segoe UI">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Activation de la licence" FontSize="18" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,15"/>

            <TextBlock Text="Identifiant Machine :" FontWeight="SemiBold" Margin="0,5,0,5"/>
            <TextBox x:Name="TxtMachineId" IsReadOnly="True" Background="#EBEDEF" Padding="8" Margin="0,0,0,15" 
                     FontSize="12" BorderBrush="#BDC3C7" BorderThickness="1"/>

            <TextBlock Text="Clé d'activation :" FontWeight="SemiBold" Margin="0,5,0,5"/>
            <TextBox x:Name="TxtLicenseKey" Padding="8" Margin="0,0,0,25" 
                     FontSize="12" BorderBrush="#3498DB" BorderThickness="1.5"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="Activer" Width="100" Height="35" IsDefault="True" Click="Activate_Click" 
                        Background="#27AE60" Foreground="White" BorderThickness="0" Margin="0,0,15,0" 
                        Cursor="Hand" FontWeight="Bold" FontSize="12">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="4"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <Button Content="Annuler" Width="100" Height="35" IsCancel="True" 
                        Background="#E67E22" Foreground="White" BorderThickness="0" 
                        Cursor="Hand" FontWeight="Bold" FontSize="12">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="4"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>

            <TextBlock Text="Appuyez sur Entrée pour activer ou Échap pour annuler" 
                       FontSize="10" Foreground="#7F8C8D" HorizontalAlignment="Center" Margin="0,15,0,0"/>
        </StackPanel>
    </Grid>
</Window>
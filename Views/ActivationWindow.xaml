<Window x:Class="FacturationMercuriale.Views.ActivationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Activation du Logiciel" Height="300" Width="450"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Background="#F4F6F7" FontFamily="Segoe UI"
        SizeToContent="Height">
    <!-- ← AJOUT : Ajuste automatiquement la hauteur -->

    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Activation de la licence" FontSize="18" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,15"/>

            <TextBlock Text="Identifiant Machine :" FontWeight="SemiBold" Margin="0,5,0,5"/>
            <TextBox x:Name="TxtMachineId" IsReadOnly="True" Background="#EBEDEF" Padding="8" Margin="0,0,0,15"/>

            <TextBlock Text="Clé d'activation :" FontWeight="SemiBold" Margin="0,5,0,5"/>
            <TextBox x:Name="TxtLicenseKey" Padding="8" Margin="0,0,0,20"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="Activer" Width="90" Height="32" IsDefault="True" Click="Activate_Click" 
                        Background="#2ECC71" Foreground="White" BorderThickness="0" Margin="0,0,10,0" 
                        Cursor="Hand" FontWeight="Bold" Padding="5,0"/>
                <Button Content="Annuler" Width="90" Height="32" IsCancel="True" Background="#E74C3C" 
                        Foreground="White" BorderThickness="0" Cursor="Hand" FontWeight="Bold" Padding="5,0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>